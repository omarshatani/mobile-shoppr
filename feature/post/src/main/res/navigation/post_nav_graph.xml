<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/post_nav_graph"
    app:startDestination="@id/post_fragment">
    <fragment
        android:id="@+id/post_fragment"
        android:name="com.shoppr.post.PostFragment"
        android:label="Post"
        tools:layout="@layout/fragment_post" >
        <action
            android:id="@+id/action_post_fragment_to_create_post_fragment"
            app:destination="@id/create_post_fragment" />
        <action
            android:id="@+id/action_post_fragment_to_post_detail_fragment"
            app:destination="@id/post_detail_fragment" />
    </fragment>
    <fragment
        android:id="@+id/post_detail_fragment"
        android:name="com.shoppr.post.PostDetailFragment"
        tools:layout="@layout/fragment_post_detail">
        <argument
            android:name="postId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/create_post_fragment"
        android:name="com.shoppr.post.CreatePostFragment"
        android:label="Create Post"
        tools:layout="@layout/fragment_create_post" />
</navigation>