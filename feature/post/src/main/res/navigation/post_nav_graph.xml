<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/post_nav_graph"
    app:startDestination="@id/post_fragment">

    <fragment
        android:id="@+id/post_fragment"
        android:name="com.shoppr.post.PostFragment">

        <action
            android:id="@+id/action_post_to_post_detail"
            app:destination="@id/post_detail_fragment" />

        <action
            android:id="@+id/action_post_to_create_post"
            app:destination="@id/create_post_fragment" />
    </fragment>

    <fragment
        android:id="@+id/create_post_fragment"
        android:name="com.shoppr.post.CreatePostFragment"
        android:label="New Post"
        tools:layout="@layout/fragment_create_post" />

    <fragment
        android:id="@+id/post_detail_fragment"
        android:name="com.shoppr.post.PostDetailFragment">
        <argument
            android:name="postId"
            app:argType="string" />
    </fragment>

</navigation>