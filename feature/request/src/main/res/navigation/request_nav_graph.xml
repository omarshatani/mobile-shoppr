<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/request_nav_graph"
    app:startDestination="@id/request_fragment">
    <fragment
        android:id="@+id/request_fragment"
        android:name="com.shoppr.request.RequestFragment"
        android:label="Request"
        tools:layout="@layout/fragment_request">
        <action
            android:id="@+id/action_request_fragment_to_requestDetailFragment"
            app:destination="@id/request_detail_fragment" />
    </fragment>
    <fragment
        android:id="@+id/request_detail_fragment"
        android:name="com.shoppr.request.RequestDetailFragment"
        tools:layout="@layout/fragment_request_detail">
        <argument android:name="requestId" />
    </fragment>
</navigation>