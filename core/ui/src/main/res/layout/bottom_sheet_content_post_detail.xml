<?xml version="1.0" encoding="utf-8"?><!-- This layout shows the details of a single selected post -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:paddingBottom="16dp">

    <!-- Post Image -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/detail_post_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
        tools:srcCompat="@tools:sample/backgrounds/scenic"
        android:contentDescription="Selected post image" />

    <!-- Post Title -->
    <TextView
        android:id="@+id/detail_post_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        android:textColor="?attr/colorOnSurface"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/detail_post_image"
        app:layout_constraintTop_toTopOf="@id/detail_post_image"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Vintage Leather Jacket" />

    <!-- Post Price -->
    <TextView
        android:id="@+id/detail_post_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textAppearance="?attr/textAppearanceBodyLarge"
        android:textColor="?attr/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/detail_post_title"
        app:layout_constraintTop_toBottomOf="@id/detail_post_title"
        tools:text="$150.00" />

    <!-- Post Lister Info -->
    <TextView
        android:id="@+id/detail_post_lister_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBodySmall"
        android:textColor="?attr/colorOnSurfaceVariant"
        app:drawableStartCompat="@drawable/ic_account_circle"
        app:drawableTint="?attr/colorOnSurfaceVariant"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="@id/detail_post_title"
        app:layout_constraintBottom_toBottomOf="@id/detail_post_image"
        tools:text="by Omar S." />
    <!-- Ensure you have ic_account_circle_24 drawable -->

    <!-- Description -->
    <TextView
        android:id="@+id/detail_post_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="?attr/colorOnSurfaceVariant"
        app:layout_constraintTop_toBottomOf="@id/detail_post_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="A beautiful vintage leather jacket, perfect for all seasons. Only worn a few times. No scratches or marks. Comes from a smoke-free home." />

    <!-- Action Buttons -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_view_full_post"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="View Full Post"
        app:layout_constraintTop_toBottomOf="@id/detail_post_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
