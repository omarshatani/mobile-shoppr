<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/splash_fragment">

    <fragment
        android:id="@+id/splash_fragment"
        android:name="com.shoppr.ui.SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splash_to_login"
            app:destination="@id/login_nav_graph"
            app:popUpTo="@id/splash_fragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splash_to_main"
            app:destination="@id/main_fragment"
            app:popUpTo="@id/splash_fragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/main_fragment"
        android:name="com.shoppr.main.MainFragment"
        tools:layout="@layout/fragment_main" />

    <fragment
        android:id="@+id/create_post_fragment"
        android:name="com.shoppr.post.CreatePostFragment"
        tools:layout="@layout/fragment_create_post" />

    <include app:graph="@navigation/login_nav_graph" />
    <include app:graph="@navigation/post_nav_graph" />
    <include app:graph="@navigation/checkout_nav_graph" />
    <include app:graph="@navigation/request_nav_graph" />
    <include app:graph="@navigation/profile_nav_graph" />

    <action
        android:id="@+id/action_login_to_main"
        app:destination="@id/main_fragment"
        app:popUpTo="@id/login_nav_graph"
        app:popUpToInclusive="true" />

    <action
        android:id="@+id/action_global_navigate_to_create_post"
        app:destination="@id/create_post_fragment" />

    <action
        android:id="@+id/action_global_create_post_to_map"
        app:destination="@id/map_nav_graph" />

    <action
        android:id="@+id/action_global_navigate_to_login"
        app:destination="@id/login_nav_graph"
        app:popUpTo="@id/main_nav_graph"
        app:popUpToInclusive="true" />

</navigation>